<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="16dp">

    <ImageView
        android:id="@+id/image_product"
        android:layout_width="124dp"
        android:layout_height="161dp"
        android:scaleType="centerCrop"
        android:src="@drawable/baseline_image_24" />

    <TextView
        android:id="@+id/text_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/image_product"
        android:layout_marginStart="16dp"
        android:text="Product Title"
        android:textSize="18sp"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/text_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/text_title"
        android:layout_toEndOf="@id/image_product"
        android:layout_marginStart="16dp"
        android:text="Price: $0.00"
        android:textSize="16sp"/>

    <TextView
        android:id="@+id/text_stock"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/text_price"
        android:layout_toEndOf="@id/image_product"
        android:layout_marginStart="16dp"
        android:text="Stock: 0"
        android:textSize="16sp"/>

    <ImageView
        android:id="@+id/image_add_stock"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/text_stock"
        android:layout_alignStart="@id/text_stock"
        android:layout_marginTop="16dp"
        android:src="@drawable/baseline_add_24"
        android:contentDescription="add stock"/>
</RelativeLayout>
